{
    "name": "letters-social",
    "version": "0.10.0",
    "description": "Sample application for React in Action",
    "main": "./src/index.js",
    "@std/esm": {
        "esm": "all",
        "cjs": true
    },
    "now": {
        "name": "letters-social",
        "alias": "social.react.sh",
        "dotenv": ".env.production"
    },
    "scripts": {
        "analyze": "ANALYZE=true npm run build",
        "api": "nodemon -x 'node -r @std/esm ./db/run.js'",
        "build:app": "NODE_ENV=production webpack -p --progress --config ./build/webpack.config.prod.js",
        "build": "NODE_ENV=production npm-run-all build:app db:seed",
        "client:dev": "webpack-dev-server --config ./build/webpack.config.js",
        "doc": "esdoc -c esdoc.json",
        "db:seed": "node -r @std/esm db/seed.js",
        "deploy": "now -e LETTERS_FIREBASE_ADMIN_KEY=${LETTERS_FIREBASE_ADMIN_KEY} -d",
        "dev": "npm-run-all -p api client:dev server:dev styles:w",
        "server:dev": "nodemon --config nodemon.json index.js",
        "start": "NODE_ENV=production pm2 start ./index.js --no-daemon",
        "styles:w": "npm run styles && node-sass src/styles/styles.scss -o static/ -w src/styles --watch --recursive",
        "styles": "node-sass -q src/styles/styles.scss -o static/",
        "test:w": "jest --watch --coverage",
        "test": "jest --coverage"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/react-in-action/letters-social.git"
    },
    "author": "Mark Thomas <mark@ifelse.io>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/react-in-action/letters-social/issues"
    },
    "engines": {
        "node": "8.5.0",
        "npm": "5.4.0"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "setupFiles": [
            "raf/polyfill",
            "./test/setup.js"
        ],
        "globals": {
            "__DEV__": true,
            "NODE_ENV": "test",
            "ENDPOINT": "http://localhost:3500",
            "GOOGLE_API_KEY": "key",
            "FIREBASE_AUTH_DOMAIN": "url",
            "MAPBOX_API_TOKEN": "token"
        }
    },
    "homepage": "https://github.com/react-in-action/letters-social#readme",
    "dependencies": {
        "@std/esm": "^0.9.2",
        "axios": "0.16.2",
        "babel-register": "6.26.0",
        "bad-words": "1.5.1",
        "body-parser": "^1.18.1",
        "classnames": "2.2.5",
        "compression": "1.7.0",
        "config": "1.26.2",
        "cookie-parser": "1.4.3",
        "cookies": "0.7.1",
        "cors": "2.8.4",
        "debug": "2.6.3",
        "enroute": "1.0.1",
        "environs": "0.4.5",
        "express": "4.15.4",
        "firebase": "4.3.1",
        "firebase-admin": "5.2.1",
        "font-awesome": "4.7.0",
        "helmet": "3.8.1",
        "history": "4.7.2",
        "hpp": "0.2.2",
        "humanize-duration": "3.10.1",
        "invariant": "2.2.2",
        "isomorphic-fetch": "2.2.1",
        "js-cookie": "2.1.4",
        "json-server": "0.12.0",
        "lodash": "4.17.4",
        "mapbox": "1.0.0-beta9",
        "morgan": "1.8.2",
        "parse-link-header": "1.0.1",
        "pm2": "^2.6.1",
        "react": "^16.0.0-rc.3",
        "react-dom": "^16.0.0-rc.3",
        "react-redux": "5.0.6",
        "react-router": "3.1.0-rc.1",
        "redux": "3.7.2",
        "redux-thunk": "2.2.0",
        "response-time": "2.3.2",
        "uuid": "3.1.0"
    },
    "devDependencies": {
        "autoprefixer": "7.1.4",
        "babel-eslint": "^8.0.0",
        "babel-jest": "21.0.2",
        "babel-loader": "7.1.2",
        "babel-plugin-transform-async-to-generator": "^6.24.1",
        "babel-preset-env": "1.6.0",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-react-app": "3.0.2",
        "coveralls": "2.13.1",
        "css-loader": "0.28.7",
        "cssnano": "3.10.0",
        "enzyme": "^2.9.1",
        "esdoc": "^1.0.2",
        "esdoc-ecmascript-proposal-plugin": "^1.0.0",
        "esdoc-jsx-plugin": "^1.0.0",
        "esdoc-standard-plugin": "^1.0.0",
        "eslint": "4.6.1",
        "eslint-config-prettier": "2.4.0",
        "eslint-plugin-react": "7.3.0",
        "extract-text-webpack-plugin": "3.0.0",
        "faker": "4.1.0",
        "file-loader": "0.11.2",
        "flow-bin": "^0.54.1",
        "forcem-ipsum": "1.7.3",
        "html-webpack-plugin": "2.30.1",
        "jest": "^21.1.0",
        "jest-enzyme": "3.8.2",
        "jsdoc-babel": "^0.3.0",
        "loaders.css": "0.1.2",
        "mkdirp": "0.5.1",
        "node-sass": "4.5.3",
        "nodemon": "1.12.0",
        "npm-run-all": "4.1.1",
        "ora": "1.3.0",
        "postcss-cssnext": "3.0.2",
        "postcss-import": "10.0.0",
        "postcss-loader": "2.0.6",
        "prettier": "^1.7.0",
        "raf": "3.3.2",
        "react-test-renderer": "^16.0.0-rc.3",
        "redux-mock-store": "1.3.0",
        "regenerator-runtime": "0.11.0",
        "sass-loader": "6.0.6",
        "sinon": "3.2.1",
        "starwars": "1.0.0",
        "style-loader": "0.18.2",
        "sw-precache-webpack-plugin": "0.11.4",
        "url-loader": "0.5.9",
        "webpack": "3.5.6",
        "webpack-bundle-analyzer": "2.9.0",
        "webpack-dev-middleware": "1.12.0",
        "webpack-dev-server": "^2.8.2",
        "webpack-hot-middleware": "2.19.1",
        "webpack-manifest-plugin": "^1.3.2",
        "webpack-md5-hash": "0.0.5"
    }
}
