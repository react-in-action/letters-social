{
  "name": "newsfeed",
  "version": "0.0.1",
  "description": "A newsfeed application for Letters.",
  "main": "./src/components/app.js",
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "scripts": {
    "api:dev": "json-server db/seed/db.json -r db/routes.json -p 3500 -s db/backups",
    "api:prod": "json-server db/seed/db.json -r db/routes.json -p ${PORT} -s db/backups",
    "build:app": "babel-node build/build.js",
    "build:all": "run-s build:app build:server copy:html db:seed",
    "build:server": "babel server/*.js --babelrc=true --ignore='node_modules, coverage, docs, dist' --compact='true' --minified --no-comments --out-dir dist",
    "copy:html": "cp -r src/index.html dist",
    "dev": "run-p --parallel api:dev start:dev",
    "postinstall": "npm run welcome",
    "prestart": "npm run build:all",
    "db:seed": "babel-node db/seed.js",
    "start:dev": "babel-node run/dev.js",
    "start:server": "node --optimize_for_size dist/server/run.js",
    "start": "npm-run-all --parallel api:prod start:server",
    "test": "ava",
    "welcome": "node run/welcome.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/markthethomas/react-in-action.git"
  },
  "author": "Mark Thomas <mark@ifelse.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/markthethomas/react-in-action/issues"
  },
  "engines": {
    "node": "6.2.2"
  },
  "homepage": "https://github.com/markthethomas/react-in-action#readme",
  "dependencies": {
    "axios": "^0.12.0",
    "babel-cli": "^6.9.0",
    "babel-core": "^6.9.0",
    "babel-plugin-react-display-name": "^2.0.0",
    "babel-plugin-transform-async-functions": "^6.8.0",
    "babel-plugin-transform-class-properties": "^6.10.2",
    "babel-plugin-transform-regenerator": "^6.9.0",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-plugin-typecheck": "^3.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-es2015-native-modules": "^6.6.0",
    "babel-preset-react": "^6.5.0",
