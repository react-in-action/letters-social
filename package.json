{
  "name": "letters-social",
  "version": "0.2.0",
  "description": "A newsfeed application for Letters.",
  "main": "./src/index.js",
  "scripts": {
    "api:dev": "json-server db/seed/db.json -r db/routes.json -p 3500 -s db/backups",
    "api:prod": "json-server db/seed/db.json -r db/routes.json -p ${ENDPOINT_PORT} -s db/backups",
    "build:app": "babel-node build/build.js",
    "build:client": "react-scripts build",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "client:dev": "babel-node run/dev.js",
    "client:test": "ENDPOINT='http://localhost:3500' jest --coverage",
    "client:test:watch": "ENDPOINT='http://localhost:3500' jest --watch",
    "build:all": "npm-run-all build:app build:server copy:html db:seed",
    "build:server": "babel server/*.js --babelrc=true --ignore='node_modules, coverage, docs, dist' --compact='true' --minified --no-comments --out-dir dist",
    "copy:html": "cp -r public/index.html dist",
    "dev": "npm-run-all --parallel api:dev client:dev client:test:watch styles:w",
    "postinstall": "npm run build:all",
    "db:seed": "babel-node db/seed.js",
    "styles:w": "node-sass src/styles/styles.scss -o public/ -w src/styles",
    "stlyes": "node-sass src/styles/styles.scss -o public/",
    "start:dev": "babel-node run/dev.js",
    "rundep": "react-scripts start",
    "test": "npm run client:test && npm run coverage",
    "start": "node --optimize_for_size dist/server/run.js",
    "welcome": "node run/welcome.js"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "unmockedModulePathPatterns": [
      "node_modules/react/",
      "node_modules/enzyme/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/react-in-action/letters-social.git"
  },
  "author": "Mark Thomas <mark@ifelse.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/react-in-action/letters-social/issues"
  },
  "engines": {
    "node": "^6.9.1"
  },
  "homepage": "https://github.com/react-in-action/letters-social#readme",
  "dependencies": {
    "autoprefixer": "^6.5.3",
    "axios": "^0.15.0",
    "babel-cli": "^6.14.0",
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.8",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-es2017": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-1": "^6.16.0",
    "bad-words": "^1.4.2",
    "bluebird": "^3.4.6",
    "body-parser": "^1.15.2",
    "bootstrap-sass": "^3.3.6",
    "browser-sync": "^2.18.2",
    "chalk": "^1.1.3",
    "cheerio": "^0.22.0",
    "compression": "^1.6.2",
    "connect-history-api-fallback": "^1.3.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.1",
    "css-loader": "^0.26.0",
    "enroute": "^1.0.1",
    "environs": "^0.4.1",
    "enzyme": "^2.6.0",
    "eslint": "^3.10.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.1",
    "eslint-plugin-react": "^6.7.1",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^2.0.0-beta.4",
    "faker": "^3.1.0",
    "firebase": "^3.6.1",
    "flexboxgrid": "^6.3.1",
    "flow-bin": "^0.35.0",
    "helmet": "^3.1.0",
    "history": "^4.4.0",
    "hpp": "^0.2.1",
    "html-webpack-plugin": "^2.24.1",
    "invariant": "^2.2.2",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^17.0.3",
    "json-loader": "^0.5.4",
    "json-server": "^0.9.0",
    "loaders.css": "^0.1.2",
    "localforage": "^1.4.2",
    "lodash": "^4.17.2",
    "mkdirp": "^0.5.1",
    "moment": "^2.16.0",
    "morgan": "^1.7.0",
    "node-sass": "^3.13.0",
    "node-uuid": "^1.4.7",
    "npm-run-all": "^3.1.0",
    "ora": "^0.3.0",
    "postcss-loader": "^1.1.1",
    "react": "^15.4.0",
