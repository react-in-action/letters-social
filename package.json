{
  "name": "letters-social",
  "version": "0.2.0",
  "description": "A newsfeed application for Letters.",
  "main": "./src/components/app.js",
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "scripts": {
    "api:dev": "json-server db/seed/db.json -r db/routes.json -p 3500 -s db/backups",
    "api:prod": "json-server db/seed/db.json -r db/routes.json -p ${ENDPOINT_PORT} -s db/backups",
    "build:app": "babel-node build/build.js",
    "build:all": "npm-run-all build:app build:server copy:html db:seed",
    "build:server": "babel server/*.js --babelrc=true --ignore='node_modules, coverage, docs, dist' --compact='true' --minified --no-comments --out-dir dist",
    "copy:html": "cp -r src/index.html dist",
    "dev": "npm-run-all --parallel api:dev start:dev",
    "postinstall": "npm run welcome && npm run build:all",
    "db:seed": "babel-node db/seed.js",
    "start:dev": "babel-node run/dev.js",
    "rundep": "react-scripts start",
    "start": "node --optimize_for_size dist/server/run.js",
    "test": "ava",
    "welcome": "node run/welcome.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/react-in-action/letters-social.git"
  },
  "author": "Mark Thomas <mark@ifelse.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/react-in-action/letters-social/issues"
  },
  "engines": {
    "node": "6.2.2"
  },
  "homepage": "https://github.com/react-in-action/letters-social#readme",
  "dependencies": {
    "ava": "^0.15.2",
    "axios": "^0.13.1",
    "babel-cli": "^6.9.0",
    "babel-core": "^6.9.0",
    "babel-eslint": "^6.0.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-react-display-name": "^2.0.0",
    "babel-plugin-transform-class-properties": "^6.10.2",
    "babel-plugin-transform-regenerator": "^6.9.0",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-plugin-typecheck": "^3.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-es2015-native-modules": "^6.9.3",
    "babel-preset-es2015-webpack": "^6.4.1",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.5.0",
    "babel-preset-stage-1": "^6.13.0",
    "babel-register": "^6.9.0",
    "bad-words": "^1.3.1",
    "bluebird": "^3.4.1",
    "body-parser": "^1.15.2",
    "bootstrap-sass": "^3.3.6",
    "browser-sync": "^2.14.0",
    "chalk": "^1.1.3",
    "cheerio": "^0.20.0",
    "compression": "^1.6.2",
    "connect-history-api-fallback": "^1.2.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.7.1",
    "css-loader": "^0.23.1",
    "enzyme": "^2.3.0",
    "es6-promise": "^3.2.1",
    "eslint": "^3.2.2",
    "eslint-config-airbnb": "^10.0.0",
    "eslint-plugin-import": "^1.12.0",
    "eslint-plugin-jsx-a11y": "^2.0.1",
    "eslint-plugin-react": "^6.0.0",
    "express": "^4.14.0",
    "faker": "^3.1.0",
    "firebase": "^3.1.0",
    "helmet": "^2.1.2",
    "hpp": "^0.2.1",
    "isomorphic-fetch": "^2.2.1",
    "json-loader": "^0.5.4",
    "json-server": "^0.8.17",
    "loaders.css": "^0.1.2",
    "localforage": "^1.4.2",
    "lodash": "^4.14.1",
    "mkdirp": "^0.5.1",
    "moment": "^2.13.0",
    "morgan": "^1.7.0",
    "node-sass": "^3.8.0",
    "node-uuid": "^1.4.7",
    "npm-run-all": "^2.2.2",
    "ora": "^0.3.0",
    "react": "^15.3.0",
    "react-addons-test-utils": "^15.2.1",
    "react-bootstrap": "^0.30.1",
    "react-dom": "^15.3.0",
    "react-fontawesome": "^1.1.0",
    "react-loaders": "^2.1.1",
    "react-overlays": "^0.6.6",
    "react-typewriter": "^0.4.1",
    "response-time": "^2.3.1",
    "sass-loader": "^4.0.0",
